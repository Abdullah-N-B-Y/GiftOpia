                                    <label asp-for="Categoryid" class="control-label"></label>
                                    <input asp-for="Categoryid" disabled class="form-control" />
                                </div>*@
                                <div class="form-group">
                                    <select hidden asp-for="Categoryid" class="form-control" value="@ViewData["CategoryId"]"></select>
                                </div>
                                @*<div class="form-group">
                                    <label asp-for="Orderid" class="control-label"></label>
                                    <select asp-for="Orderid" class ="form-control" asp-items="ViewBag.Orderid"></select>
                                </div>*@
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

