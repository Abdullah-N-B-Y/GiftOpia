@model IEnumerable<GiftStoreMVC.Models.GiftstoreGift>

@{
    ViewData["Title"] = "My gift";
    Layout = "~/Views/Shared/_MainDashboardLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-container">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="main">
                    <ul class="cards">
                        @foreach (var item in Model)
                        {
                            <li class="cards_item">
                                <div class="card">
                                    <div class="card_image">
                                        <img src="@Url.Content("~/GiftsImages/"+item.Imagepath)" style="width:370px;height:200px;" />
                                        <span class="card_price"><span>$</span>@item.Giftprice</span>
                                    </div>
                                    <div class="card_content">
                                        <h2 class="card_title">@item.Giftname</h2>
                                        <div class="card_text">
                                            <p>
                                                Admin name: <strong>Abdullah</strong>
                                            </p>
                                            <hr />
                                            <p>
                                                @item.Giftdescription
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
