@model GiftStoreMVC.Models.GiftstoreGift

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MainDashboardLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-container">
        <div class="main-content">
            <div class="section__content section__content--p30">
<h1>Details</h1>

<div>
    <h4>GiftstoreGift</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Giftname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Giftname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Giftprice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Giftprice)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content("~/GiftsImages/"+Model.Imagepath)" style="width:120px;height:80px;border-radius:15px;"/>
        </dd>
        <dt class = "col-sm-2">
            Availability
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Giftavailability)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Giftdescription)
        </dd>
        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Categoryname)
        </dd>
        <dt class = "col-sm-2">
            Username
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Giftid">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>
</div>
