@model GiftStoreMVC.Models.GiftstoreCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_MainDashboardLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-container">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <h1>Delete</h1>

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>GiftstoreCategory</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Category name
                            @*@Html.DisplayNameFor(model => model.Categoryname)*@
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Categoryname)
                        </dd>
                        <dt class="col-sm-2">
                            Category image
                            @*@Html.DisplayNameFor(model => model.Imagepath)*@
                        </dt>
                        <dd class="col-sm-10">
                            <img src="@Url.Content("~/CategoriesImages/"+Model.Imagepath)" style="width:200px;height:150px;border-radius:10px;"></img>
                        </dd>
                        <dt class="col-sm-2">
                            Category description
                            @*@Html.DisplayNameFor(model => model.Categorydescription)*@
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Categorydescription)
                        </dd>
                    </dl>
    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Categoryid" />
                        <input type="submit" value="Delete" class="btn btn-danger" style="width:200px;text-align:center;"/>
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
