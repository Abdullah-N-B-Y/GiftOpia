@model IEnumerable<GiftstoreCategory>


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-01">
            <div class="text-content">
                <h4>Best Offer</h4>
                <h2>New Arrivals On Sale</h2>
                <a asp-controller="Auth" asp-action="SignIn" class="btn btn-primary" style="color:#fff;">Get started</a>
            </div>
        </div>
        <div class="banner-item-02">
            <div class="text-content">
                <h4>Flash Deals</h4>
                <h2>Get your best products</h2>
                <a asp-controller="Auth" asp-action="SignIn" class="btn btn-primary" style="color:#fff;">Get started</a>
            </div>
        </div>
        <div class="banner-item-03">
            <div class="text-content">
                <h4>Last Minute</h4>
                <h2>Grab last minute deals</h2>
                <a asp-controller="Auth" asp-action="SignIn" class="btn btn-primary" style="color:#fff;">Get started</a>
            </div>
        </div>
    </div>
</div>


<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Our Categories</h2>
                    <a asp-controller="Auth" asp-action="SignIn">view all products and gifts >>></a>
                </div>
            </div>
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="product-item">
                        <a asp-controller="Auth" asp-action="SignIn"><img src="@Url.Content("~/CategoriesImages/"+item.Imagepath)" alt=""></a>
                        <div class="down-content">
                            <a href="#"><h4>@item.Categoryname</h4></a>
                            <h6>@item.GiftstoreGifts.Count</h6>
                            <p>@item.Categorydescription</p>
                            <ul class="stars">
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                            </ul>
                            <span>Reviews (24)</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="best-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>About GiftOpia</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="left-content">
                    <h4>Looking for the best gifts?</h4>
                    <p>
                       Welcome to Giftopia, the ultimate destination for all your gifting
                       needs! At Giftopia, we have crafted a magical realm where the joy
                       of giving and the art of thoughtful gifting come together to create
                       an unparalleled experience for our customers.
                   </p>
                    <p>
                        So, step into the enchanting world of Giftopia and let your heartfelt
                        gestures illuminate the lives of those you hold dear. Join us in
                        celebrating the magic of giving and discovering the true essence of
                        gifting – a journey of sharing joy, love, and happiness with the ones
                        who matter the most. Welcome to Giftopia, where every gift is a story
                        waiting to be cherished!
                    </p>
                    <ul class="featured-list">
                        <li><a href="#">Enchanting Gifting Destination</a></li>
                        <li><a href="#">Thoughtful Selection</a></li>
                        <li><a href="#">Wide Range of Gifts</a></li>
                        <li><a href="#">Unique and Extraordinary Items</a></li>
                        <li><a href="#">Effortless Shopping</a></li>
                    </ul>
                    <a href="about.html" class="filled-button">Read More</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-image">
                    <img src="https://images6.alphacoders.com/128/1288379.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
