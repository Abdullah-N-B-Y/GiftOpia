@model IEnumerable<GiftstoreOrder>

@{
    ViewData["Title"] = "Driver Orders";
    Layout = "~/Views/Shared/_MainDashboardLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-container">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="row m-t-30">
                    <div class="col-md-12">
                        <!-- DATA TABLE-->
                        <form asp-action="Orders">
                            <div class="table-responsive m-b-40">
                                <table class="table table-borderless table-data3">
                                    <thead>
                                        <tr>
                                            <th>Order Id</th>
                                            <th>Recipient address</th>
                                            <th>Arrival date</th>
                                            <th>Order status</th>
                                            <th>Final price</th>
                                            <th>Arrived</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Orderid</td>
                                                <td>@item.Recipientaddress</td>
                                                <td>@item.Arrivaldate</td>
                                                <td class="process">@item.Orderstatus</td>
                                                <td>@item.Finalprice</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <input type="hidden" name="Orderid" value="@item.Orderid" />
                                                        <button type="submit" name="arrivalStatus" value="Arrived" class="item" style="background-color:limegreen;" data-toggle="tooltip" data-placement="top" title="" data-original-title="Accept">
                                                            <i class="fa-solid fa-check" style="color:#fff;"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" name="reason" placeholder="Reason..." />
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </form>
                        <!-- END DATA TABLE-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

